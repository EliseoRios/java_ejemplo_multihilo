<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adaptadoresListView.Adaptador_asistencia" >

    <TextView
        android:id="@+id/txtNombreAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgFotoAlumno"
        android:text="@string/txtWhite"
        android:textColor="@color/nombreLv"
        android:textSize="15sp"
        android:textStyle="bold" />
    
    <TextView 
        android:id="@+id/txtCodigoAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNombreAlumno"
        android:layout_toRightOf="@+id/imgFotoAlumno"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#FF8000"
        android:text="@string/txtWhite"/>

    <ImageView
        android:id="@+id/imgFotoAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" 
        android:src="@android:drawable/ic_menu_gallery"/>

    <CheckBox
        android:id="@+id/radAsistencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgFotoAlumno"
        android:layout_alignRight="@+id/txtNombreAlumno"
        android:layout_alignParentRight="true"
        android:text="@string/txtWhite"
        android:layout_alignTop="@+id/txtCodigoAlumno"/>
    
    
</RelativeLayout>
